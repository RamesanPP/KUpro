<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_list_item"
        android:orientation="vertical">


        <TextView
            android:id="@+id/document_name"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"

            android:text="Document Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/document_description"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/document_name"
            android:background="@drawable/rounded_button"
            android:text="Download"

            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/document_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/document_name"
            android:layout_alignParentEnd="true"
            android:layout_gravity="start"
            android:layout_marginEnd="0dp"
            android:gravity="start"
            android:ellipsize="end"
            android:maxLines="4"
            android:minLines="1"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Document Description"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="italic" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>