<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context=".ui.drawer.about_us.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingBottom="20dp"
            android:src="@drawable/eduzap_logo_small" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/about_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/about_background"
                    android:gravity="center"
                    android:text="About"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textStyle="bold" />


                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/about_description_1"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/about_description"
                    android:textSize="17sp"
                    app:colorClickableText="@color/colorPrimary"
                    app:trimCollapsedText="Show less"
                    app:trimExpandedText="Show more"
                    app:trimLength="200"

                    app:trimMode="trimModeLength" />

                <ImageView
                    android:id="@+id/about_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/about_title_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/about_background"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Method of Teaching"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/about_description_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/method_of_teaching"
                    android:textSize="17sp"
                    app:colorClickableText="@color/colorPrimary"
                    app:trimCollapsedText="Show less"
                    app:trimExpandedText="Show more"
                    app:trimLength="200"
                    app:trimMode="trimModeLength" />

                <ImageView
                    android:id="@+id/about_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/about_background"
                android:gravity="center"
                android:padding="8dp"
                android:text="Support"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="start"
                android:padding="8dp"
                android:text="Send your suggestions/feedback at:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/support_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="start"
                android:padding="8dp"
                android:text="eduzapsolutions@gmail.com"
                android:autoLink="email"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/about_background"
                android:gravity="center"
                android:padding="8dp"
                android:text="Connect with Us"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="53dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_internet" />

                <TextView
                    android:id="@+id/website"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:autoLink="web"
                    android:text="www.eduzap.org"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="53dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_facebook" />

                <TextView
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:text="facebook.com/eduzapsolutions"
                    android:gravity="center"
                    android:padding="8dp"
                    android:autoLink="web"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="53dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_instagram" />

                <TextView
                    android:id="@+id/instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:text="instagram.com/eduzap.in"
                    android:gravity="center"
                    android:padding="8dp"
                    android:autoLink="web"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="53dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_telegram" />

                <TextView
                    android:id="@+id/telegram"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:text="https://t.me/eduzap_telegram"
                    android:gravity="center"
                    android:padding="8dp"
                    android:autoLink="web"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="53dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_twitter" />

                <TextView
                    android:id="@+id/twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:text="twitter.com/EDUzap_twit"
                    android:autoLink="web"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>